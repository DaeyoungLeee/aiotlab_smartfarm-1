<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:padding="15dp">



        <WebView
            android:id="@+id/webview_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@id/txt_lightControl"
            android:background="#e0e0e0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:id="@+id/layyout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txt_ip"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/edit_round"
                android:ems="15"
                android:fontFamily="@font/nanumsquareb"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_port"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/edit_round"
                android:ems="15"
                android:fontFamily="@font/nanumsquareb"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_below="@id/webview_sensor"
            android:id="@+id/txt_lightControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquarebold"
            android:padding="10dp"
            android:text="조명 제어"
            android:textColor="@color/colorNuga"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_below="@id/txt_lightControl"
            android:id="@+id/layout_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ledswitch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="name"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/LEDswitch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ledswitch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="name"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/LEDswitch2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ledswitch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="name"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/LEDswitch3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ledswitch4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="name"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/LEDswitch4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_below="@id/layout_light"
            android:id="@+id/txt_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquarebold"
            android:padding="10dp"
            android:text="방범 제어"
            android:textColor="@color/colorNuga"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_below="@+id/txt_safe"
            android:id="@+id/layout_safe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Sirenswitch1"
