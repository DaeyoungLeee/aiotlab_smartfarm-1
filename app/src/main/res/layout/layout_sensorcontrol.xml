                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/Sirenswitch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Sirenswitch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="name"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/Sirenswitch2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_below="@+id/layout_safe"
            android:id="@+id/txt_concent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquarebold"
            android:padding="10dp"
            android:text="콘센트 제어"
            android:textColor="@color/colorNuga"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_below="@+id/txt_concent"
            android:id="@+id/layout_concent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
