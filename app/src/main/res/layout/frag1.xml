<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_frag1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/aiot_bg"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/bluetoothConnect"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_bluetooth_black_24dp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarebold"
                    android:text="Home"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />

            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:text="현재 날씨"
                                    android:textColor="@color/colorNuga"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/searchCity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="36sp"
                                    android:text="지역"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/nowCity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="지역"
                                    android:textSize="10sp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/weather_icon"
                                        android:layout_width="80dp"
                                        android:layout_height="80sp"
                                        android:layout_gravity="center" />

                                    <TextView
                                        android:id="@+id/weather_state"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="맑음"
                                        android:textColor="#191919" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/nowTemperature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/nanumsquareb"
                                        android:text=""
                                        android:textSize="40sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/nanumsquareb"
                                            android:text="온도"
                                            android:textColor="#191919"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/nanumsquareb"
                                            android:text="(℃)"
                                            android:textColor="#191919" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/nowHumidity"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/nanumsquareb"
                                        android:gravity="center"
                                        android:text=""
                                        android:textSize="40sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/nanumsquareb"
                                            android:text="습도 "
                                            android:textColor="#191919"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/nanumsquareb"
                                            android:text="(%)"
                                            android:textColor="#191919" />

                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/station_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginEnd="16dp"
                                android:text=""
                                android:textSize="8sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:text="미세먼지 : "
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/now_big_dust"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:text=" ㎍/㎥"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="24dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:text="초미세먼지 : "
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/now_small_dust"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:text=" ㎍/㎥"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="미세먼지 데이터는 airkorea로부터 제공받았습니다."
                            android:textSize="6sp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                //카드2

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/manageEnvironment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/nanumsquareb"
                            android:text="생육 환경"
                            android:textColor="@color/colorNuga"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            //온도

                            <ImageView
                                android:id="@+id/th_temp"
                                android:layout_width="36dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/temperature_icon" />

                            <TextView
                                android:id="@+id/getTempText"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/nanumsquareb"
                                android:gravity="center"
                                android:text="-"
                                tools:text="25.2" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:fontFamily="@font/nanumsquarebold"
                                android:gravity="center"
                                android:text="℃" />

                            //조도

                            <ImageView
                                android:id="@+id/th_brightness"
                                android:layout_width="36dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:padding="3dp"
                                android:src="@drawable/brightness_icon" />

                            <TextView
                                android:id="@+id/getCDStext"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/nanumsquareb"
                                android:gravity="center"
                                android:text="-"
                                tools:text="225" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquarebold"
                                android:gravity="center"
                                android:text="LUX" />

                        </LinearLayout>

                        //카드 1 두 번째 줄

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            //온도

                            <ImageView
                                android:id="@+id/getHumidity"
                                android:layout_width="36dp"
                                android:layout_height="match_parent"
                                android:padding="3dp"
                                android:src="@drawable/humidity_icon" />

                            <TextView
                                android:id="@+id/getHumidityText"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/nanumsquareb"
                                android:gravity="center"
                                android:text="-"
                                tools:text="41" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:fontFamily="@font/nanumsquarebold"
                                android:gravity="center"
                                android:text="%" />

                            //조도

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/co2icon" />

                            <TextView
                                android:id="@+id/txt_getCo2"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/nanumsquareb"
                                android:gravity="center"
                                android:text="-"
                                tools:text="1000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquarebold"
                                android:gravity="center"
                                android:text="PPM" />

                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                //카드 3

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/nanumsquareb"
                            android:text="안전관리"
                            android:textColor="@color/colorNuga"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_guard"
                                    android:layout_width="36dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/blackguard" />

                                <TextView
                                    android:id="@+id/getInvasion"
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:gravity="center"
                                    android:text="-"
                                    tools:text="25.2" />


                                <ImageView
                                    android:id="@+id/img_fire"
                                    android:layout_width="36dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="48dp"
                                    android:src="@drawable/fire_icon" />

                                <TextView
                                    android:id="@+id/getFire"
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:gravity="center"
                                    android:text="-"
                                    tools:text="25.2" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_gas"
                                    android:layout_width="36dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/gas" />

                                <TextView
                                    android:id="@+id/getGas"
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:gravity="center"
                                    android:text="-"
                                    tools:text="25.2" />


                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="48dp"
                                    android:src="@drawable/dust_icon" />

                                <TextView
                                    android:id="@+id/txt_insidedust"
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:gravity="center"
                                    android:text="-"
                                    tools:text="25.2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:gravity="center"
                                    android:text="  ㎍/㎥" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="데이터 관리"
                            android:textColor="@color/colorNuga"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                //온도

                                <ImageView
                                    android:id="@+id/img_todaythunder"
                                    android:layout_width="36dp"
                                    android:padding="3dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/electric_icon" />

                                <TextView
                                    android:id="@+id/txt_current1"
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:gravity="center"
                                    android:text="-"
                                    tools:text="25.2" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:fontFamily="@font/nanumsquarebold"
                                    android:gravity="center"
                                    android:text="W" />

                                <ImageView
                                    android:id="@+id/img_yesterdaythunder"
                                    android:layout_width="36dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="8dp"
                                    android:padding="3dp"
                                    android:src="@drawable/electric_icon" />

                                <TextView
                                    android:id="@+id/txt_yesterdaythunder"
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/nanumsquareb"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textSize="25sp"
                                    tools:text="225" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:fontFamily="@font/nanumsquarebold"
                                    android:gravity="center"
                                    android:text="W" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </GridLayout>

        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>